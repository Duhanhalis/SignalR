<div class="accordion-item">
    <h2 class="accordion-header">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            Herkese Mesaj Gönder
        </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
            <!-- #region Body -->
            <div class="container" id="container-body">
                <div class="row p-3 border rounded-1">
                    <div class="col-12">
                        <h5 class="text-center text-danger">Herkese Mesaj Gönder</h5>
                        <hr />
                    </div>
                    <div class="col-6 row">
                        <div class="col-12 my-2">
                            <label class="text-secondary">Kullanıcı İsmin :</label>
                            <input type="text" class="form-control" id="textboxinput" />
                        </div>
                        <div class="col-12 my-2">
                            <label class="text-secondary">Mesajın :</label>
                            <textarea class="form-control" id="textarea" placeholder="Mesajınız.." style="height:300px;"></textarea>
                        </div>
                        <div class="col-12 row gap-1 p-0 m-0 justify-content-center">
                            <button class="col-5 btn btn-success p-0" id="sendbtn">Gönder</button>
                            <a href="" class="col-5 text-center btn btn-primary p-0" target="_blank">Yeni Sekme</a>
                        </div>
                    </div>
                    <div class="col-6 overflow-auto" style="height:500px;">
                        <table class="table table-hover table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">İsim</th>
                                    <th scope="col">Mesaj</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- #endregion -->
        </div>
    </div>
</div>

<script>
    //#region Herkese Mesaj Gonder Butonu
    document.querySelector('#container-body #sendbtn').addEventListener('click', function (e) {
        e.preventDefault();

        let inputvalue = document.querySelector('#container-body #textboxinput').value;
        let textarea = document.querySelector('#container-body #textarea').value;
        connection.invoke("SendMessageMethods", inputvalue, textarea);
    });
    //#endregion
</script>